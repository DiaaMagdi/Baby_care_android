<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:scrollbars="vertical"
    tools:context=".babysitterinfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Babysittertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:shadowColor="#CC000000"
                android:shadowDx="4"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/BabySitterInfo"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#FFD8DB"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usertext"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/agebabysitter"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:autofillHints=""
                android:background="@drawable/editround"
                android:fontFamily="sans-serif"
                android:hint="@string/age"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FF5F70"
                android:textColorHint="#A6E0828A"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <EditText
                android:id="@+id/salarybabysitter"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:autofillHints=""
                android:background="@drawable/editround"
                android:fontFamily="sans-serif"
                android:hint="@string/Sallary"
                android:inputType="numberDecimal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FF5F70"
                android:textColorHint="#A6E0828A"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/agebabysitter" />

            <EditText
                android:id="@+id/phonebabysitter"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:autofillHints=""
                android:background="@drawable/editround"
                android:fontFamily="sans-serif"
                android:hint="@string/Phonenumber"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FF5F70"
                android:textColorHint="#A6E0828A"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/salarybabysitter" />

            <EditText
                android:id="@+id/slogan"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:autofillHints=""
                android:background="@drawable/editround"
                android:fontFamily="sans-serif"
                android:hint="@string/slogan"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FF5F70"
                android:textColorHint="#A6E0828A"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phonebabysitter" />

            <EditText
                android:id="@+id/Area"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:autofillHints=""
                android:background="@drawable/editround"
                android:fontFamily="sans-serif"
                android:hint="@string/Area"
                android:inputType="text|textAutoCorrect|textCapSentences|textMultiLine"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FF5F70"
                android:textColorHint="#A6E0828A"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slogan" />

            <EditText
                android:id="@+id/Description"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:autofillHints=""
                android:background="@drawable/editround"
                android:fontFamily="sans-serif"
                android:hint="@string/Description"
                android:inputType="text|textAutoCorrect|textCapSentences|textMultiLine"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FF5F70"
                android:textColorHint="#A6E0828A"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Area" />

<!--            <Button-->
<!--                android:id="@+id/uploadphoto"-->
<!--                android:layout_width="220dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_marginTop="24dp"-->
<!--                android:autofillHints=""-->
<!--                android:background="@drawable/drawableright"-->
<!--                android:fontFamily="sans-serif"-->
<!--                android:paddingLeft="20dp"-->
<!--                android:paddingRight="20dp"-->
<!--                android:textColor="#FF5F70"-->
<!--                android:textColorHint="#A6E0828A"-->
<!--                android:textSize="16sp"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintHorizontal_bias="0.502"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/Description" />-->


            <Button
                android:id="@+id/nextbut"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/editround"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Next"
                android:textColor="#FF5F70"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>